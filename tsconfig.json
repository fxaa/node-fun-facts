{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["esnext", "ES2020", "ES2018", "ES2019", "ES2017", "ES2016", "DOM"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "baseUrl": "./src",
        "outDir": "tsdist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
